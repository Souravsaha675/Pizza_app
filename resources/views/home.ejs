    <section class="hero py-16">
        <div class="container mx-auto flex items-center justify-between">
            <div class="w-1/2 ml-4">
                <h6 class="text-lg"><em>Are you hungry?</em></h6>
                <h1 class="text-5xl font-bold">Don't Wait!</h1>
                <button class="px-6 py-2 rounded-full text-white mt-4 font-bold btn-primary">Order Now</button>
            </div>
            <div class="w-1/2">
                <img src="/img/hero-pizza.png" alt="pizza">
            </div>
        </div>
    </section>

    <section class="menu container mx-auto py-8">
        <h1 class="font-bold text-xl mb-8 px-4">All pizzas</h1>
        <div class="grid grid-cols-4 gap-y-16 gap-x-10">
            <% pizzas.forEach(pizza=>{ %>
                <div class="">
                    <img class="h-40 mb-4 mx-auto" src="/img/<%=pizza.image %>" alt="<%=pizza.name%>">
                    <div class="text-center">
                        <h2 class="mb-4 text-lg"><%=pizza.name%></h2>
                        <span class="color py-1 px-4 rounded-full uppercase test-xs"><%=pizza.size%></span>
                        <div class="flex items-center justify-around mt-6">
                            <span class="font-bold text-lg">$<%=pizza.price%></span>
                            <button data-pizza="<%= JSON.stringify(pizza) %>" class="cart py-1 px-4 rounded-full flex items-center font-bold">
                                <span>+</span>
                                <span class="ml-4">Add</span>
                            </button>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </section>
